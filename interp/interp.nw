    /* copy blocks */
    lua_error_handle(lua_table_foreach(L, temp->section_table, 
                                       "copy_block_contents"), 
                     "<internal code>");
  
    /* copy special block */
    lua_pushusertag(L, (void *) temp->def_section, lua_RBlock_tag);
